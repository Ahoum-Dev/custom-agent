# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Frontend LiveKit Configuration (same as above but for client-side)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key

# Redis Configuration (for transcript streaming)
TRANSCRIPT_REDIS_URL=redis://localhost:6379

# PostgreSQL Database Configuration
POSTGRES_DB=onboarding_calls
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password@localhost:5432/onboarding_calls

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com

# Optional: Custom Ports
PORT=8000
FLASK_PORT=5000

# Development/Production Flag
ENVIRONMENT=development
